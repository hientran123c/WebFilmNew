@model Film_website.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Đăng nhập</h3>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                    </div>
                }

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="EmailOrUserName" class="form-label">Email hoặc tên người dùng</label>
                        <input asp-for="EmailOrUserName" class="form-control" placeholder="Nhập email hoặc tên người dùng" />
                        <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">Mật khẩu</label>
                        <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                </form>

                <div class="text-center mt-3">
                    <p>
                        <a asp-action="ForgotPassword" class="text-decoration-none">
                            <i class="fas fa-key me-1"></i>Quên mật khẩu?
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}