@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Chào mừng đến Film Website</h1>
            @if (User.Identity!.IsAuthenticated)
            {
                <p class="lead">Xin chào @User.Identity.Name! Chúc bạn xem phim vui vẻ.</p>
                
                <div class="row mt-4">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Phim mẫu 1</h5>
                                <p class="card-text">Mô tả phim mẫu.</p>
                                <button class="btn btn-primary">Xem chi tiết</button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Phim mẫu 2</h5>
                                <p class="card-text">Mô tả phim mẫu khác.</p>
                                <button class="btn btn-primary">Xem chi tiết</button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Phim mẫu 3</h5>
                                <p class="card-text">Mô tả phim mẫu thứ ba.</p>
                                <button class="btn btn-primary">Xem chi tiết</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p class="lead">Vui lòng <a asp-controller="Account" asp-action="Login">đăng nhập</a> hoặc <a asp-controller="Account" asp-action="Register">đăng ký</a> để xem phim.</p>
            }
        </div>
    </div>
</div>