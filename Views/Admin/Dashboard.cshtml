@{
    ViewData["Title"] = "ADMIN HQ - CineHub Comic Edition";
    Layout = null; // No layout for admin dashboard
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/admin-styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Creepster&family=Bungee&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Comic Book Floating Elements -->
    <div class="comic-elements" id="comicElements">
        <!-- Dynamic comic elements will be added here -->
    </div>

    <!-- Admin Navigation Bar -->
    <nav class="admin-navbar">
        <div class="nav-container">
            <div class="nav-left">
                <div class="admin-logo">
                    <div class="logo-circle">🛡️</div>
                    <h2>ADMIN HQ</h2>
                </div>
            </div>
            <div class="nav-center">
                <h1>🎬 CINEHUB COMMAND CENTER 🎬</h1>
            </div>
            <div class="nav-right">
                <button class="nav-btn" onclick="toggleNotifications()">🔔</button>
                <button class="nav-btn" onclick="toggleProfile()">👨‍💼</button>
                <a href="@Url.Action("Index", "Home")" class="nav-btn logout-btn">🚪</a>
            </div>
        </div>
    </nav>

    <!-- Main Container -->
    <div class="main-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-section">
                <div class="user-info">
                    <div class="user-avatar">🦸</div>
                    <div class="user-details">
                        <h3>ADMIN HERO</h3>
                        <p>Supreme Commander</p>
                    </div>
                </div>
            </div>

            <nav class="sidebar-menu">
                <a href="#" class="menu-item active" data-section="dashboard">
                    <span class="menu-icon">🏠</span>
                    <span class="menu-text">DASHBOARD</span>
                </a>
                <a href="#" class="menu-item" data-section="movies">
                    <span class="menu-icon">🎬</span>
                    <span class="menu-text">MOVIE MANAGER</span>
                </a>
                <a href="#" class="menu-item" data-section="series">
                    <span class="menu-icon">📺</span>
                    <span class="menu-text">SERIES CONTROL</span>
                </a>
                <a href="#" class="menu-item" data-section="subtitles">
                    <span class="menu-icon">💬</span>
                    <span class="menu-text">SUBTITLE HQ</span>
                </a>
                <a href="@Url.Action("Translator", "Admin")" class="menu-item translator-link">
                    <span class="menu-icon">🌐</span>
                    <span class="menu-text">AI TRANSLATOR</span>
                </a>
                <a href="#" class="menu-item" data-section="photos">
                    <span class="menu-icon">📸</span>
                    <span class="menu-text">PHOTO VAULT</span>
                </a>
                <a href="#" class="menu-item" data-section="users">
                    <span class="menu-icon">👥</span>
                    <span class="menu-text">USER HEROES</span>
                </a>
                <a href="#" class="menu-item" data-section="comments">
                    <span class="menu-icon">💭</span>
                    <span class="menu-text">HERO COMMENTS</span>
                </a>
                <a href="#" class="menu-item" data-section="reports">
                    <span class="menu-icon">📊</span>
                    <span class="menu-text">BATTLE REPORTS</span>
                </a>
                <a href="#" class="menu-item" data-section="contact">
                    <span class="menu-icon">📞</span>
                    <span class="menu-text">HERO CONTACT</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Dashboard Section -->
            <section id="dashboard" class="content-section active">
                <div class="section-header">
                    <h2>🎯 ADMIN DASHBOARD 🎯</h2>
                    <div class="quick-actions">
                        <button class="action-btn" onclick="addNewMovie()">➕ ADD MOVIE</button>
                        <button class="action-btn" onclick="addNewSeries()">📺 ADD SERIES</button>
                        <button class="action-btn" onclick="addSubtitle()">💬 ADD SUBTITLE</button>
                        <button class="action-btn" onclick="addPhoto()">📸 ADD PHOTO</button>
                        <button class="action-btn" onclick="manageUsers()">👥 MANAGE USERS</button>
                        <a href="@Url.Action("Translator", "Admin")" class="action-btn translator-btn">🌐 AI TRANSLATOR</a>
                    </div>
                </div>

                <div class="dashboard-stats">
                    <div class="stat-card">
                        <div class="stat-icon">🎬</div>
                        <div class="stat-info">
                            <h3>245</h3>
                            <p>EPIC MOVIES</p>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">📺</div>
                        <div class="stat-info">
                            <h3>67</h3>
                            <p>HERO SERIES</p>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">👥</div>
                        <div class="stat-info">
                            <h3>1,247</h3>
                            <p>ACTIVE HEROES</p>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">💬</div>
                        <div class="stat-info">
                            <h3>3,892</h3>
                            <p>SUBTITLES</p>
                        </div>
                    </div>
                    <div class="stat-card translator-stat">
                        <div class="stat-icon">🌐</div>
                        <div class="stat-info">
                            <h3>156</h3>
                            <p>TRANSLATIONS</p>
                        </div>
                        <div class="stat-action">
                            <a href="@Url.Action("Translator", "Admin")" class="stat-btn">TRANSLATE NOW</a>
                        </div>
                    </div>
                </div>

                <div class="content-grid">
                    <div class="content-card">
                        <div class="card-header">
                            <h3>🎬 RECENT MOVIES</h3>
                            <button class="card-action">VIEW ALL</button>
                        </div>
                        <div class="card-content">
                            <div class="table-container">
                                <div class="table-header">
                                    <span>TITLE</span>
                                    <span>DATE</span>
                                    <span>SIZE</span>
                                    <span>TYPE</span>
                                    <span>ACTIONS</span>
                                </div>
                                <div class="table-row">
                                    <span>🎭 Mystery_Heroes_2024.mp4</span>
                                    <span>2024-01-15</span>
                                    <span>2.3 GB</span>
                                    <span>MOVIE</span>
                                    <span class="actions">
                                        <button class="mini-btn edit">✏️</button>
                                        <button class="mini-btn delete">🗑️</button>
                                        <a href="@Url.Action("Translator", "Admin")" class="mini-btn translate">🌐</a>
                                    </span>
                                </div>
                                <div class="table-row">
                                    <span>🚀 Space_Adventure_Ultimate.mkv</span>
                                    <span>2024-01-14</span>
                                    <span>1.8 GB</span>
                                    <span>MOVIE</span>
                                    <span class="actions">
                                        <button class="mini-btn edit">✏️</button>
                                        <button class="mini-btn delete">🗑️</button>
                                        <a href="@Url.Action("Translator", "Admin")" class="mini-btn translate">🌐</a>
                                    </span>
                                </div>
                                <div class="table-row">
                                    <span>⚡ Lightning_Speed_Heroes.mp4</span>
                                    <span>2024-01-13</span>
                                    <span>2.1 GB</span>
                                    <span>MOVIE</span>
                                    <span class="actions">
                                        <button class="mini-btn edit">✏️</button>
                                        <button class="mini-btn delete">🗑️</button>
                                        <a href="@Url.Action("Translator", "Admin")" class="mini-btn translate">🌐</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="content-card">
                        <div class="card-header">
                            <h3>💬 SUBTITLE FILES</h3>
                            <button class="card-action">MANAGE ALL</button>
                        </div>
                        <div class="card-content">
                            <div class="table-container">
                                <div class="table-header">
                                    <span>FILENAME</span>
                                    <span>DATE</span>
                                    <span>SIZE</span>
                                    <span>TYPE</span>
                                    <span>ACTIONS</span>
                                </div>
                                <div class="table-row">
                                    <span>💬 Epic_Subtitles_EN.srt</span>
                                    <span>2024-01-13</span>
                                    <span>45 KB</span>
                                    <span>SUBTITLE</span>
                                    <span class="actions">
                                        <button class="mini-btn edit">✏️</button>
                                        <button class="mini-btn delete">🗑️</button>
                                        <a href="@Url.Action("Translator", "Admin")" class="mini-btn translate">🌐</a>
                                    </span>
                                </div>
                                <div class="table-row">
                                    <span>💬 Hero_Stories_VI.srt</span>
                                    <span>2024-01-12</span>
                                    <span>38 KB</span>
                                    <span>SUBTITLE</span>
                                    <span class="actions">
                                        <button class="mini-btn edit">✏️</button>
                                        <button class="mini-btn delete">🗑️</button>
                                        <a href="@Url.Action("Translator", "Admin")" class="mini-btn translate">🌐</a>
                                    </span>
                                </div>
                                <div class="table-row">
                                    <span>💬 Adventure_Quest_JP.srt</span>
                                    <span>2024-01-11</span>
                                    <span>52 KB</span>
                                    <span>SUBTITLE</span>
                                    <span class="actions">
                                        <button class="mini-btn edit">✏️</button>
                                        <button class="mini-btn delete">🗑️</button>
                                        <a href="@Url.Action("Translator", "Admin")" class="mini-btn translate">🌐</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- AI Translator Feature Highlight -->
                <div class="feature-highlight translator-highlight">
                    <div class="feature-content">
                        <div class="feature-icon">🌐</div>
                        <div class="feature-info">
                            <h3>NEW: AI-Powered Translation System</h3>
                            <p>Transform your movies with cutting-edge AI translation technology. Support for multiple languages, automatic subtitle generation, and voice dubbing capabilities.</p>
                            <div class="feature-stats">
                                <span class="feature-stat">🎯 95% Accuracy</span>
                                <span class="feature-stat">⚡ 3x Faster</span>
                                <span class="feature-stat">🌍 50+ Languages</span>
                            </div>
                        </div>
                        <div class="feature-action">
                            <a href="@Url.Action("Translator", "Admin")" class="feature-btn">TRY TRANSLATOR</a>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Additional sections from the original HTML would continue here -->
            <!-- For brevity, I'm including just the main structure -->

        </main>
    </div>

    <!-- Floating Action Button -->
    <button class="fab" onclick="showQuickActions()">⚡</button>

    <!-- Profile Modal -->
    <div class="modal" id="profileModal">
        <div class="modal-content">
            <h3>👨‍💼 ADMIN PROFILE 👨‍💼</h3>
            <div class="profile-info">
                <div class="profile-avatar-large">🛡️</div>
                <h4>Supreme Admin</h4>
                <p>Command Level: LEGENDARY</p>
            </div>
            <div class="profile-actions">
                <button onclick="editProfile()">✏️ EDIT PROFILE</button>
                <button onclick="changePassword()">🔒 CHANGE PASSWORD</button>
                <button onclick="viewSettings()">⚙️ SETTINGS</button>
                <a href="@Url.Action("Translator", "Admin")" class="profile-translator-btn">🌐 AI TRANSLATOR</a>
            </div>
        </div>
    </div>

    <script src="~/js/admin-dashboard.js"></script>
    <style>
        /* Additional styles for translator integration */
        .translator-link,
        .translator-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            border: 2px solid #667eea !important;
            position: relative;
            overflow: hidden;
        }

            .translator-link::before,
            .translator-btn::before {
                content: '✨';
                position: absolute;
                top: -5px;
                right: -5px;
                background: #ffd700;
                border-radius: 50%;
                width: 20px;
                height: 20px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 12px;
                animation: pulse 2s infinite;
            }

        .translator-stat {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: 2px solid #667eea;
            position: relative;
        }

        .stat-btn {
            background: white;
            color: #667eea;
            padding: 0.5rem 1rem;
            border-radius: 15px;
            font-weight: bold;
            text-decoration: none;
            font-size: 0.8rem;
            transition: all 0.3s ease;
        }

            .stat-btn:hover {
                background: #f8f9fa;
                transform: scale(1.05);
            }

        .mini-btn.translate {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .mini-btn.translate:hover {
                background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
                transform: scale(1.1);
            }

        .feature-highlight {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
            border: 2px solid #667eea;
            border-radius: 15px;
            padding: 2rem;
            margin-top: 2rem;
            position: relative;
            overflow: hidden;
        }

            .feature-highlight::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
                transform: rotate(45deg);
                animation: shine 3s infinite;
            }

        .feature-content {
            display: flex;
            align-items: center;
            gap: 2rem;
            position: relative;
            z-index: 1;
        }

        .feature-icon {
            font-size: 4rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .feature-info h3 {
            margin: 0 0 0.5rem 0;
            color: #667eea;
            font-size: 1.5rem;
        }

        .feature-info p {
            margin: 0 0 1rem 0;
            color: #ccc;
            line-height: 1.6;
        }

        .feature-stats {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .feature-stat {
            background: rgba(102, 126, 234, 0.2);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            color: #667eea;
            font-weight: bold;
        }

        .feature-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1rem 2rem;
            border-radius: 25px;
            text-decoration: none;
            font-weight: bold;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

            .feature-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
                color: white;
            }

        .profile-translator-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            color: white !important;
            text-decoration: none;
            padding: 0.8rem 1.5rem;
            border-radius: 20px;
            font-weight: bold;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            display: inline-block;
            text-align: center;
        }

            .profile-translator-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);
            }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }
        }

        @@keyframes shine {
            0% {
                transform: translateX(-100%) translateY(-100%) rotate(45deg);
            }

            100% {
                transform: translateX(100%) translateY(100%) rotate(45deg);
            }
        }
    </style>
</body>
</html>